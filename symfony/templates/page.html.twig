{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <div class="w-100 header-wrapper">
            {% block header %}
                <div class="container">
                    HEADER
                    {% block menudesktop %}
                        <div class="d-none d-md-block">
                            MENU DESKTOP
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
            {% block menuresponsive %}
                <div class="d-block d-md-none">
                    MENU RESPONSIVE
                </div>
            {% endblock %}
        </div>
    </header>
    <main>
        <div class="container">
            {% block main %}
                MAIN
            {% endblock %}
        </div>
    </main>
    <div class="w-100 supportus-wrapper">
        <div class="container">
            {% block supportus %}
                SUPPORT US
            {% endblock %}
        </div>
    </div>
    <div class="w-100 footer-wrapper">
        <footer>
            {% block footer %}
                <div class="container">
                    <div class="footer-wrapper__main d-flex flex-column flex-lg-row">
                        <aside class="footer-wrapper__main-social-network d-flex flex-row flex-lg-column justify-content-around align-items-lg-end col-12 col-lg-3 me-auto">
                            <img class="col-4" src="/images/logo-text-lvdv-white.svg" alt="Logo La Voix Du Vote">
                            <div class="footer-wrapper__main-social-network-icons d-flex flex-row col-4 col-lg-12 flex-wrap justify-content-between">
                                <span class="icon-facebook-white col-6 col-lg-3"></span>
                                <span class="icon-instagram-white col-6 col-lg-3"></span>
                                <span class="icon-linkedin-white col-6 col-lg-3"></span>
                                <span class="icon-twitter-white col-6 col-lg-3"></span>
                            </div>
                        </aside>
                        <section class="footer-wrapper__main-programmes col-6">
                            <strong>Les programmes</strong>
                            <ul class="footer-wrapper__main-programmes-list d-flex flex-wrap">
                                {{ render(url('candidates_list_name')) }}
                            </ul>
                        </section>
                        <aside class="footer-wrapper__main-menu text-lg-left text-center col-12 col-lg-2">
                            <ul>
                                <li><a href="#">Pourquoi voter ?</a></li>
                                <li><a href="#">Glossaire</a></li>
                                <li><a href="#">Nous contacter</a></li>
                            </ul>
                        </aside>
                    </div>
                    <div class="footer-wrapper__legal-notice text-center">
                        <em>Politique de confidentialit√© - @LaVoixDuVote</em>
                    </div>
                </div>
            {% endblock footer %}

        </footer>
    </div>

{% endblock %}