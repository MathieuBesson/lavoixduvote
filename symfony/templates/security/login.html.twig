{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in{% endtrans %} !{% endblock %}

{% block body %}

	<div class="form-page">
		<div class="container">
			<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
				<form class="form-login p-5" method="post">
					<h2 class="h4 mb-3 font-weight-normal text-center">{% trans %}Back-office{% endtrans %}</h2>
					<h1 class="text-center">La voix du vote</h1>
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							{% trans %}You are logged in as{% endtrans %} {{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					<div class="form-group mb-2">
						<label for="inputUsername">{% trans %}User{% endtrans %}</label>
						<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
					</div>
					<div class="form-group">
						<label for="inputPassword">{% trans %}Password{% endtrans %}</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token"
					       value="{{ csrf_token('authenticate') }}"
					>

					{#
					Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					See https://symfony.com/doc/current/security/remember_me.html

					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me"> Remember me
						</label>
					</div>
					#}
					<div class="d-flex justify-content-center">
						<button class="btn btn-lg btn-primary my-3" type="submit">
							{% trans %}Sign in{% endtrans %}
						</button>
					</div>
				</form>
			</div>
		</div>

	</div>

{% endblock %}
